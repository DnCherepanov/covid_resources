<template x-if="showCapacity">
  <div
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 transform scale-90"
      x-transition:enter-end="opacity-100 transform scale-100"
    >
    <h2 class="text-center text-2xl font-extrabold text-gray-900">The occupant capacity:</h2>
    <div class="mt-4 text-center">
      <div class="text-5xl mt-2 font-extrabold text-gray-900">
        <div x-ref="people">0</div>
      </div>
      <p class="font-medium text-xl text-gray-500">people</p>
    </div>
    <div class="bg-white rounded-xl p-12 mt-8">
      <label for="price" class="block text-md font-medium text-gray-700 mb-4">Enter the square footage of the office.</label>
      <div class="mt-1 relative rounded-md shadow-sm">
        <input x-model="footage" @input.debounce.750="countPeople()" type="number" name="quantity" id="quantity" class="py-3 px-4 bg-white rounded-lg placeholder-gray-400 text-gray-900 appearance-none inline-block w-full shadow-md focus:outline-none focus:ring-2 focus:ring-blue-600" placeholder="0.00">
      </div>
    </div>
  </div>
</template>