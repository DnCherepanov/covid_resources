<template x-if="showSupplies">
  <div
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 transform scale-90"
      x-transition:enter-end="opacity-100 transform scale-100"
    >
    <div class="bg-white rounded-xl p-12 mt-8">
      <label for="price" class="block text-md font-medium text-gray-700 mb-4">How many employees do you have?</label>
      <div class="mt-1 relative rounded-md shadow-sm">
        <input x-model="employees" type="number" name="quantity" class="py-3 px-4 bg-white rounded-lg placeholder-gray-400 text-gray-900 appearance-none inline-block w-full shadow-md focus:outline-none focus:ring-2 focus:ring-blue-600" placeholder="0">
      </div>
      <label for="price" class="block text-md font-medium text-gray-700 my-4">How many guests do you have per month?</label>
      <div class="mt-1 relative rounded-md shadow-sm">
        <input x-model="visitors" type="number" name="quantity" class="py-3 px-4 bg-white rounded-lg placeholder-gray-400 text-gray-900 appearance-none inline-block w-full shadow-md focus:outline-none focus:ring-2 focus:ring-blue-600" placeholder="0">
      </div>
    </div>
  </div>
</template>